                android:paddingEnd="@dimen/table_padding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/total_score_text"
        app:layout_constraintTop_toBottomOf="@id/result_table"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/table_padding"
        android:textColor="@android:color/black"
        android:text="@string/total_score"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        app:layout_constraintTop_toBottomOf="@id/total_score_text"
        android:layout_marginTop="@dimen/table_padding"
        app:layout_constraintStart_toStartOf="parent"
        android:text="@string/new_game"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/start_new_game_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</android.support.constraint.ConstraintLayout>
